{
  "devDependencies": {
    "@types/jest": "^19.2.4",
    "jest": "*"
  },
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watchAll",
    "compile": "tsc"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(ts|js)"
    ]
  }
}
